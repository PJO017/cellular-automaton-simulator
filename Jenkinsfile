    agent any 
    stages {
        stage("build") {
            steps {
                echo 'building the application...' 
                echo 'application built'
            }
        }
        stage("test") {
            steps {
                echo 'testing the application...'
                echo 'testing completed'
            }
        }
        stage("deploy") {
            steps {
                echo 'deploying the application... '   
            }
        }
    }
}
